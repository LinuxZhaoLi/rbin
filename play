#!/usr/bin/c
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <assert.h>
#include <libgen.h>

void ensure_bin(const char *bin) {
    char *cmd = NULL;
    const char *root = "&>/dev/null hash ";

    cmd = malloc(strlen(root) + strlen(bin) + 1);
    assert(cmd);
    strcat(cmd, root);
    strcat(cmd, bin);

    if (system(cmd)) {
        fprintf(stderr, "error: %s wasn't found in $PATH\n", bin);
        exit(1);
    }
}

int main(int argc, char **argv) {
    if (argc == 1) {
        fprintf(stderr, "usage: %s <search terms...>\n", basename(argv[0]));
        return 1;
    }

    ensure_bin("mpv");
    ensure_bin("youtube-dl");

    char cmd[512] = {0};
    strcat(cmd, "youtube-dl --default-search=auto '");

    for (int i = 1; i < argc; i++) {
        strcat(cmd, argv[i]);
        strcat(cmd, " ");
    }
    strcat(cmd, "' -o - | mpv - --vo=null --cache=$((1024*1024))");

    if (basename(argv[0])[0] == '_')
        strcat(cmd, " --loop=inf");

    return system(cmd);
}

